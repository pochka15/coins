{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Wallets",
          "wrap": true,
          "spacing": "Large",
          "size": "Large"
        },
        {
          "type": "TextBlock",
          "wrap": true,
          "text": "${$root.wallets}"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Tasks",
          "wrap": true,
          "size": "Large"
        },
        {
          "type": "TextBlock",
          "text": "${$root.tasks}",
          "wrap": true
        }
      ],
      "separator": true
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}